angular.module('appModule')
			  .component('todoList', {
				 templateUrl : "app/appModule/todoList.component.html",
				 controller : function() {
					 var vm = this;
					 
					 vm.addTask = function(todo) {
						vm.todos.push(todo); 
					 };
					 
					 vm.todos = [
					      {
					        id : 1,
					        task : 'Say "Hmmmmmmm"',
					        description : 'Bother Andy relentlessly',
					        completed : true
					      },
					      {
					        id : 2,
					        task : 'Eat dat lunch',
					        description : 'eat it up yall',
					        completed : false
					      },
					      {
					        id : 3,
					        task : 'Sort life out',
					        description : '',
					        completed :  false
					      }
					    ];
				 	},
				 	controllerAs : "vm"
			  });