angular.module('appModule')
			  .component('todoList', {
				 templateUrl : "app/appModule/todoList.component.html",
				 controller : function() {
					 var vm = this;
					 
					 vm.addTask = function(todo) {
						var generateId = function() {
						  return vm.todos[vm.todos.length-1].id + 1;
						};
						todo.id = generateId;
						vm.todos.push(angular.copy(todo)); 
					 };
					 
					 vm.todos = [
					      {
					        id : 1,
					        task : 'Say "Hmmmmmmm"',
					        description : 'Bother Andy relentlessly',
					        completed : true
					      },
					      {
					        id : 2,
					        task : 'Eat dat lunch',
					        description : 'eat it up yall',
					        completed : false
					      },
					      {
					        id : 3,
					        task : 'Sort life out',
					        description : '',
					        completed :  false
					      }
					    ];
				 	},
				 	controllerAs : "vm"
			  });